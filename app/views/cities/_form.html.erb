<div class="city">

<h1>Edit city</h1>

<%= form_for @city, :html => {:multipart => true} do |f| %>

    <%= f.label :name, :class => 'form-label' %>
    <%= f.text_field :name, :class => 'form-control' %>

    <%= f.label :date, 'Date', :class => 'form-label' %>
    <%= f.text_field :date, :placeholder => 'YYYY-MM-DD', :class => 'form-control' %>

    <%= f.label :note, :class => 'form-label' %>
    <%= f.text_area :note, :class => 'form-control' %>

    <div class = "field">
    <%= f.label :image, :class => 'form-label' %>
    <%= f.cl_image_upload :image, :class => 'form-control' %>
    </div>
    
    <div class="submit">
    <%= f.submit %>
    </div>

<% end %>

</div>