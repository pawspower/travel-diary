<%= form_for @city do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :date, 'Date' %>
    <%= f.text_field :date, :placeholder => 'YYYY-MM-DD' %>

    <%= f.label :note %>
    <%= f.text_field :note %>

    <%= f.label :image %>
    <%= f.text_field :image %>

    <%= f.submit %>
<% end %>