<nav class="navbar navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">All Countries</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
       <%= link_to "New Country", new_country_path, :class => "nav-link active" %>
      </div>
    </div>
  </div>
</nav>


<% @countries.each do |country| %>
    <p><%country.name %></p>

<div class="card">
  <h5 class="card-header">
  <% unless country.date.nil? %>
        <%= country.date.strftime '%A; %B %e, %Y' %>
        <% end %>
  </h5>
  <div class="card-body">
    <h5 class="card-title">
    <%= country.name %>
    </h5>

    <p class="card-text"><%= country.note %></p>
    <%= link_to "Start the journey", country, :class => "btn btn-primary" %>
  </div>
</div>

<% end %>